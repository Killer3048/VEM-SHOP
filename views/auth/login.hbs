<section class="forms-section">
  <h1 class="section-title">Авторизация</h1>
      {{#if RegError}}
      <p class="authError">{{RegError}}</p>
      {{/if}}


      {{#if RegPasError}}
      <p class="authError">{{RegPasError}}</p>
      {{/if}}

      {{#if PassWrong}}
      <p class="authError">{{PassWrong}}</p>
      {{/if}}


      {{#if Complete}}
      <p class="authComplete">{{Complete}}</p>
      {{/if}}

      {{#if passError}}
      <p class="authError">{{passError}}</p>
      {{/if}}

      {{#if LoginError}}
      <p class="authError">{{LoginError}}</p>
      {{/if}}


  <div class="forms">
    <div class="form-wrapper is-active">
      <button type="button" class="switcher switcher-login">
        <a class="forms-wrapper_link" href="#login">ЛОГИН</a>

        <span class="underline"></span>
      </button>
      <form action="/auth/login" class="form form-login" method="post">
        <fieldset>
          <legend>Пожалуста, введите e-mail и пароль, для того, чтобы войти</legend>
          <div class="input-block">
            <label for="login-email">E-mail</label>
            <input name="email" id="login-email" type="email" required>
          </div>
          <div class="input-block">
            <label for="login-password">Пароль</label>
            <input name="pass" id="login-password" type="password" required>
          </div>
        </fieldset>
        <button type="submit" class="btn-login">
	  <span></span>
    <span></span>
    <span></span>
    <span></span>
	Логин
  </button>
      </form>
    </div>
    <div class="form-wrapper">
      <button type="button" class="switcher switcher-signup">
	<a class="forms-wrapper_link" href="#сreateAkk"><span></span>
    <span></span>
    <span></span>
    <span></span>СОЗДАТЬ АККАУНТ</a>
        <span class="underline"></span>
      </button>
      <form action="/auth/register" class="form form-signup" method="POST">          
        <fieldset>
          <legend>Пожалуйста, введите e-mail, пароль и подтверждение пароля</legend>
          <div class="input-block">
            <label for="signup-email">E-mail</label>
            <input name="email" id="signup-email" type="email" required>
          </div>
          <div class="input-block">
            <label for="name-user">Никнейм</label>
            <input name="name" id="name-user" type="text" required>
          </div>
          <div class="input-block">
            <label for="signup-password">Пароль</label>
            <input name="pass" id="signup-password" type="password" required>
          </div>
          <div class="input-block">
            <label for="signup-password-confirm">Подтвердите пароль</label>
            <input name="confirm" id="signup-password-confirm" type="password" required>
          </div>
        </fieldset>
        <button type="submit" class="btn-signup">    <span></span>
    <span></span>
    <span></span>
    <span></span>Регистрация</button>
      </form>
    </div>
  </div>
</section>